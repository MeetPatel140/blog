<header class="d-flex justify-content-center py-3">
    <ul class="nav nav-pills">
      <li class="nav-item"><a href="/articles" class="nav-link" aria-current="page">All Articles</a></li>
      <li class="nav-item"><a href="/articles/new" class="nav-link active">New Article</a></li>
    </ul>
  </header>

  <div class="container" id="main-container">
    <h1 align="center">New Article</h1>
    <div class="container mt-4">
      <%= form_with model: @article do |form| %>
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <div class="card">
              <div class="card-body">
                <div class="form-group mb-3">
                  <%= form.label :title %>
                  <%= form.text_field :title, class: "form-control" %>
                </div>
                <div class="form-group mb-4">
                  <%= form.label :description %>
                  <%= form.text_area :description, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= form.submit "Create Article", class: "btn btn-primary", id: "create-article-btn" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  